<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.varivoda.igor.tvz.financijskimanager.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_menuListFragment"
            app:destination="@id/menuListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>

    </fragment>
    <fragment
        android:id="@+id/menuListFragment"
        android:name="com.varivoda.igor.tvz.financijskimanager.ui.menu.MenuListFragment"
        android:label="menu_list_fragment"
        tools:layout="@layout/menu_list_fragment" >
        <action
            android:id="@+id/action_menuListFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <argument android:name="item"
            app:nullable="false"
            app:argType="string"/>
        <action
            android:id="@+id/action_menuListFragment_to_flowListFragment"
            app:destination="@id/flowListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_menuListFragment_to_billFragment"
            app:destination="@id/billFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_menuListFragment_to_quarterFragment"
            app:destination="@id/quarterFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/listFragment"
        android:name="com.varivoda.igor.tvz.financijskimanager.ui.list.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <argument
            android:name="text"
            app:nullable="false"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/flowListFragment"
        android:name="com.varivoda.igor.tvz.financijskimanager.ui.flow_list.FlowListFragment"
        android:label="fragment_flow_list"
        tools:layout="@layout/fragment_flow_list" >
        <argument
            android:name="text"
            app:nullable="false"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/billFragment"
        android:name="com.varivoda.igor.tvz.financijskimanager.ui.bills.BillFragment"
        android:label="fragment_bill"
        tools:layout="@layout/fragment_bill" >
        <argument
            android:name="text"
            app:nullable="false"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/quarterFragment"
        android:name="com.varivoda.igor.tvz.financijskimanager.ui.quarter.QuarterFragment"
        android:label="fragment_quarter"
        tools:layout="@layout/fragment_quarter" >
        <argument
            android:name="text"
            app:nullable="false"
            app:argType="string"/>
    </fragment>
</navigation>