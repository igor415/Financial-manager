<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General options">
        <ListPreference
            app:allowDividerAbove="true"
            android:title="Choose toast message design"
            android:key="toast key"
            android:entries="@array/toast_designs"
            android:entryValues="@array/toast_designs"
            android:summary="%s"
            android:defaultValue="default"
            />

        <SwitchPreference
            app:allowDividerAbove="true"
            android:title="Vibrations"
            android:defaultValue="true"
            android:key="vibrations key"/>

        <CheckBoxPreference
            app:allowDividerAbove="true"
            android:title="Enable or disable notifications"
            android:key="notifications key"
            android:defaultValue="true"
            android:summaryOff="Disabled"
            android:summaryOn="Enabled"/>

        <SeekBarPreference
            app:allowDividerAbove="true"
            android:title="Change brightness"
            android:key="brightness key"/>

    </PreferenceCategory>

</PreferenceScreen>