<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="theme" parent="Theme.MaterialComponents.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar.TranslucentStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="HomeItemStyle">
        <item name="android:textColor">@color/homeTextColor</item>
        <item name="android:padding">25dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="HomeCardView">
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
    </style>

    <style name="darkToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@android:color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/dark_color</item>
        <item name="stSolidBackground">true</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="lightToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@android:color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/light_color</item>
        <item name="stSolidBackground">true</item>
        <item name="stRadius">3dp</item>
    </style>

</resources>